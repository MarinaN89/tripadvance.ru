li {
    list-style-type: none;
}

ul {
    margin-left: 0;
    padding-left: 0;
}

.select { 
    position: relative;
    width: 100%;
}

.text{
    flex:1 1 auto;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.input { 
    display: flex; 
    align-items: center; 
    justify-content: flex-start;
    padding: 5px 8px; 
    border: 1px solid lightgrey; 
    border-radius: 2px;
    height: 16px;
    min-width: 50px;
    white-space: nowrap;
}

.input:hover{
    cursor: pointer;
}


.popup{
    position: absolute;
    top: 33px;
    left: 0;
    background-color: white;
    color: black;
    padding: 5px 0;
    min-width: max-content;
    width: 100%;
    max-height: 240px;
    overflow: hidden;
    overflow-y: auto;
    border: 1px solid lightgrey;
    z-index: 9999;
}

.item{
    padding:5px 8px;
    font-size: 14px;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    max-height: 16px;
}

.item:hover{
    background-color:lightblue;
    cursor: pointer;
}

.image{
    width: 24px;
    height: 20px;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    margin-right: 10px;
}

.requred{
    color: red;
    width: 10px;
    text-align: end;
    font-weight: bold;
    font-size: 18px;
    padding-right: 0px;
    position: absolute;
    left: -15px;
    top: 4px;
}

