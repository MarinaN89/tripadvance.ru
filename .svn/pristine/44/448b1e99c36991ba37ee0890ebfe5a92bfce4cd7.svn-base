.buttons{
    display:flex;
}
.button-left{
    padding: 24px 32px;
    background-color:darkslategrey;
    color:white;
    transition: background-color 100ms ease;
}
.button-right{
    margin-left: 4px;
    padding: 24px 32px;
    background-color:darkslategrey;
    color:white;

    transition: background-color 100ms ease;
}

.button-right:hover{
    background-color:rgb(38, 65, 65);
}

.button-left:hover{
    background-color:rgb(38, 65, 65);
}

.small{
    padding: 7px 9px 3px 9px;
}

