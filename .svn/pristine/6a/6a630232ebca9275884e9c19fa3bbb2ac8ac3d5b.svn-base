.wrapper{
    width: 100%;
    background-color: #374455dc;
    display: flex;
    justify-content: center;
    flex-direction: column;
    color:white;
    flex-wrap: wrap;
}

.wrapper-email{
    display: flex;
    justify-content: center;
    background-color: #374455;
    width: 100%;
    padding: 12px 0px;
    align-items: center;
}

.wrapper-content{
    display: flex;
    max-width: 1310px;
    width: 100%;
    margin: 0 auto;
    justify-content: space-between;
    padding-top: 48px;
    padding-bottom: 48px;
    flex-wrap: wrap;
}

.block-email{
    display: flex;
    justify-content: center;
    position: relative;
    width: max-content;
    align-items: center;
}

.content-logo{
    width: 115px;
    height: 115px;

}

.wrapper-content__left{
    display: flex;
    flex-direction: column;
}

.content-left__text{
    font-size: 16px;
    color: white;
}

.content-personal{
    margin-top: 12px;
    text-decoration: underline;
    max-width: 190px;
    font-size: 14px;
}
.content-address{
    margin-top: 6px;
}
.content-email{
    margin-top: 6px;
    margin-bottom: 36px;
}
.content-phone{
    margin-top: 36px;
}
.content-company{
    margin-top: 12px;
}

.content-block__top{
    display: flex;
    flex-wrap: wrap;
}

.content-block__bottom{
    display: flex;
    margin-top: 48px;
    flex-wrap: wrap;
}

.content-block__title{
  font-size: 18px;
  margin-bottom: 12px;
  color: white;
    font-weight: 500;
}

.content-block__item{
  font-size: 14px;
  padding: 4px 0;
  font-weight: 300;
  color: white;
}

.content-block{
    display: flex;
    flex-direction: column;
    padding: 0 48px;
    width: auto;
}

.wrapper-content__right{
    display: flex;
    flex-direction: column;
    margin-left: 68px;
    flex:auto;
}

.wrapper-seporator{
    border-left: 1px solid lightgray;
    height: 170px;
    margin-left: 68px;
    margin-top: 150px;
    flex: 1;
}

 /* text field */
 .text-field {
    margin-bottom: 1rem;
  }

  .text-field__label {
    display: block;
    margin-bottom: 0.25rem;
  }

  .text-field__input {
    display: block;
    min-width: 400px;
    height: 28px;
    padding: 6px 4px;
    margin: 0px 24px 4px 24px;
    font-family: inherit;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: #212529;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #bdbdbd;
    border-radius: 0.25rem;
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    -webkit-appearance: none;
    appearance: none;
    max-width: 400px;
  }

  .text-field__input[type="search"]::-webkit-search-decoration,
  .text-field__input[type="search"]::-webkit-search-cancel-button,
  .text-field__input[type="search"]::-webkit-search-results-button,
  .text-field__input[type="search"]::-webkit-search-results-decoration {
    -webkit-appearance: none;
  }

  .text-field__input::placeholder {
    color: #212529;
    opacity: 0.4;
  }

  .text-field__input:focus {
    color: #212529;
    background-color: #fff;
    border-color: #bdbdbd;
    outline: 0;
    box-shadow: 0 0 0 0.2rem rgba(158, 158, 158, 0.25);
  }

  .text-field__input:disabled,
  .text-field__input[readonly] {
    background-color: #f5f5f5;
    opacity: 1;
  }

  /* with button */
  .text-field__group {
    display: flex;
    width: 100%;
  }

  .text-field__btn {
    display: inline-block;
    font-weight: 400;
    line-height: 1.5;
    color: #212529;
    text-align: center;
    vertical-align: middle;
    cursor: pointer;
    -webkit-user-select: none;
    user-select: none;
    background-color: #ED3E3E;
    /* border: 1px solid #bdbdbd; */
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    border-radius: 0.25rem;
    transition: background-color 0.15s ease-in-out;
    color: white;
    width: 170px;
  }

  .text-field__btn:hover {
    background-color: #d33737;
  }

  .text-field__group input {

    position: relative;
    z-index: 2;
  }

  .text-field__btn {
    position: absolute;
    border-top-left-radius: 20px;
    border-bottom-left-radius: 20px;
    border-left-width: 0;
    z-index: 5;
    height: 52px;
    right: -100px;
  }

  .text-field__img{
    width: 52px;
    height: 52px;
  }

  .text-field__group__email{
    display: flex;
    align-items: center;
  }
  
  @media (max-width:680px){
    .block-email{
      flex-direction: column;
    }

    .text-field__group__email{
      margin-bottom: 12px;
      width: calc(100% - 12px);
      padding-left: 12px;
    }

    .text-field__input{
      min-width: auto;
      width: 100%;
    }

    .wrapper-content{
      flex-direction: column-reverse;
    }

    .content-block{
      width: 100%;

    }
    .wrapper-content__left{
      justify-content: center;
      align-items: center;
      margin-top: 48px;
      margin-bottom: 24px;
    }

    .content-block__title{

    }

    .content-block{
      margin-bottom: 24px;
    }

    .wrapper-content__right{
      margin-left: 0px;
    }

    .content-block__bottom{
      margin-top: 0px;
    }
  }