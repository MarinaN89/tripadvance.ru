.wrapper{
    display: flex;
    justify-content: space-between;
    align-content: center;
    width: 100%;
    margin-top: 6px;
}

.left{
    display: flex;
    align-content: center;
    justify-content: flex-start;
    cursor: pointer;
}

.image{
    width:64px;
    height:64px;
}

.name{
    font-size: 16px;
    font-weight: 600;
    display: flex;
    align-content: center;
    flex-wrap: wrap;
    margin-right: 12px;
}

.name-block{
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.code{
    
    font-size: 14px;
    font-weight: 600;
    display: flex;
    align-content: center;
    flex-wrap: wrap;
    color: grey;
    margin-top: 4px;
}

.right{
    display: flex;
    align-content: center;
    justify-content: flex-end;
    flex-wrap: wrap;
}

.price{
    display: flex;
    align-content: center;
    font-size: 24px;
    font-weight: 600;
    flex-wrap: wrap;
}

.right-separator{
    margin: 0px 12px;
    border-right:2px solid lightgray;
    width:1px;
    display: flex;
    align-content: center;
    justify-content: flex-end;
    flex-wrap: wrap;
}

.line{
    border-top: 1px solid lightgray;
    margin-top: 6px;
    width: 100%;
}

.wrapper-line{
    display: flex;
    align-items: center;
}

.description{
    margin-bottom: 12px;
}

.attentions{
    display: flex;
    flex-wrap: nowrap;
    justify-content: flex-start;
}

.attentions-item{
    margin-right: 24px;
}

.button{
    display: flex;
    align-items: center;
}