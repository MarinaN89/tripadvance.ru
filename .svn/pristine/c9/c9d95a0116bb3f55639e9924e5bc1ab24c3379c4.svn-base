
$easing: cubic-bezier(.25,1.7,.35,.8);
$duration: 0.5s;


.wrapper{
    position: relative;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 10px;
}
.arrow:after{
    content: "â€º";
    position: absolute;
    margin-left: 0px;
    transition: all 0.2s ease-in;
    font-size: 1.4rem;
    transform: rotate(90deg);
    line-height: 1px;
}
  
.active:after{
    margin-left: -5px;
    transform:rotate(-90deg);
}





.arrow-icon {
    /* height: 2.8em; */
    /* width: 2.8em; */
    display: block;
    /* padding: 0.5em; */
    margin: 0px 4px;
    position: relative;
    cursor: pointer;
    border-radius: 4px;
}

.left-bar {
    position: absolute;
    background-color: transparent;
    top: 0;
    left: 0;
    width: 10px;
    height: 2px;
    display: block;
    transform: rotate(35deg);
    float: right;
    border-radius: 0px;
  &:after {
    content:"";
    background-color: #243254;;
    width: 8px;
    height: 2px;
    display: block;
    float: right;
    border-radius: 6px 10px 10px 6px;
    transition: all 0.5s cubic-bezier(0.25, 1.7, 0.35, 0.8);
    z-index: -1;

  }
}

.right-bar {
    position: absolute;
    background-color: transparent;
    top: 1px;
    left: 6px;
    width: 10px;
    height: 2px;
    display: block;
    transform: rotate(-35deg);
    float: right;
    border-radius: 2px;
  &:after {
    content: "";
    background-color: #243254;;
    width: 8px;
    height: 2px;
    display: block;
    float: right;
    border-radius: 10px 6px 6px 10px;
    transition: all 0.5s cubic-bezier(0.25, 1.7, 0.35, 0.8);
    z-index: -1;

  }
}

.open {
    .left-bar:after {
    transform-origin: center center;
    transform: rotate(-70deg);
  }
  .right-bar:after {
    transform-origin: center center;
    transform: rotate(70deg);
  }

}
  