
div{
    position: relative;
    /*
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    */
    transition: all 1s;
    width: 50px;
    height: 36px;

    box-sizing: border-box;
    border-radius: 25px;
    
    padding: 5px;
    display: block;

    /*
    background: white;
    border: 4px solid white;
    */

}

input{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;;
    height: 36px;
    line-height: 30px;
    outline: 0;
    border: 1px solid lightgray;
    display: none;
    font-size: 1em;
    border-radius: 20px;
    padding: 0 20px;
}

.fa{
    box-sizing: border-box;
    padding: 10px;
    width: 36px;
    height: 36px;
    position: absolute;
    top: 0;
    right: 0;
    border-radius: 50%;
    color: #07051a;
    text-align: center;
    font-size: 16px;
    transition: all 1s;

    transform: scaleX(-1);
    -moz-transform: scaleX(-1);
    -webkit-transform: scaleX(-1);
    -ms-transform: scaleX(-1);
}

.icon{
    position: absolute;
    top: 5px;
    right: 5px;
    z-index: 999;
}

div:hover,
div:valid{
    width: 200px;
    cursor: pointer;
}

div:hover input,
div:valid input{
    display: block;
}

div:hover .fa,
div:valid .fa{
    background: #ED3E3E;;
    color: white;
}
