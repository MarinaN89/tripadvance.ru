.buttons-mobile{
    position: absolute;
    display: flex;
    justify-content: space-between;
    width: -webkit-fill-available;
    height: 100%;
    align-items: center;
    padding: 0px 6px;
}

.button-mobile-left{
    border-radius: 4px;
    padding: 8px 10px 10px 10px;
    background: #ED3E3E;
    color: white;
    font-size: 22px;
    z-index: 1;
    line-height: 0.8;
}

.button-mobile-right{
    border-radius: 4px;
